<%- include('../layout/head') %>
<body>
    <%- include('../layout/header') %>
  <h1>These are your saved books</h1>
  <h1><%= rowCount %> saved books</h1>
  <% for(let i = 0; i < myBooks.length; i++) { %> 

    <div class=bookInfo>
      <ul>
        <a href="/books/<%=myBooks[i].isbn %>"><img src= <%= myBooks[i].image_url %> /></a>
        <li> <%= myBooks[i].title %> </li>
        <li> <%= myBooks[i].author %> </li>
        <li> <%= myBooks[i].description %> </li>
        <li> <%= myBooks[i].isbn %> </li>
      </ul>
      <a href="/books/<%= myBooks[i].isbn %>/update"><button>Update Book</button></a>
    </div>
    <% } %>
    <%- include('../layout/footer') %>
</body>
</html>